{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["../node_modules/@types"]
  },

  "include": ["**/*.ts"],
  "exclude": [".env", ".gitignore", "serviceAccountKey.json"],
  "requireExtensions": true
}
